<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bogoc_editext"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_height="45dp"
            android:src="@drawable/thanhvien"
            android:layout_width="45dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành viên"
            android:textSize="30dp"
            android:textStyle="bold|normal"
            ></TextView>
    </LinearLayout>
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/ed_maTV">
    </EditText>
    <EditText
        android:id="@+id/ed_tenTV"
        android:layout_width="250dp"
        android:drawableStart="@drawable/ic_thanhvien"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Tên thành viên"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/ed_namSinh"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:drawableStart="@drawable/ic_namsinh"
        android:hint="Năm Sinh"
        android:inputType="textPersonName" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_luuTV"
            android:layout_width="wrap_content"
            android:backgroundTint="	#FF8C00"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_luu"
            android:text="Lưu"
             />

        <Button
            android:id="@+id/btn_Huy"
            android:layout_width="wrap_content"
            android:drawableStart="@drawable/ic_xoa23"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:backgroundTint="	#FF8C00"
            android:text="Hủy" />
    </LinearLayout>
</LinearLayout>